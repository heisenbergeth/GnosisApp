<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cardview_dark_background</item>
        <item name="colorPrimaryDark">@color/common_google_signin_btn_text_light</item>
        <item name="colorAccent">@color/cardview_shadow_start_color</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary1</item>
        <item name="colorPrimaryDark">@color/primary_dark1</item>
        <item name="colorAccent">@color/black</item>

        <item name="android:windowBackground">@drawable/gradient</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary1</item>
        <item name="colorPrimaryDark">@color/primary_dark1</item>
        <item name="colorAccent">@color/accent1</item>

        <item name="android:windowBackground">@drawable/gradient</item>

        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/iron</item>

        <item name="colorButtonNormal">@color/primary_darker1</item>
        <item name="android:colorButtonNormal">@color/primary_darker1</item>
    </style>

    <style name="AppTheme.Dark.ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary1</item>
        <item name="colorPrimaryDark">@color/primary_dark1</item>
        <item name="colorAccent">@color/black</item>

        <item name="android:windowBackground">@drawable/gradient</item>

        <item name="colorControlNormal">@color/iron</item> <!-- arrow on spinner -->
        <item name="colorControlActivated">@color/white</item> <!-- arrow on spinner, checkbox list when clicked -->
        <item name="colorControlHighlight">@color/white</item> <!-- background color on subject interest when item is clicked -->
        <item name="android:textColorHint">@color/iron</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorBackgroundFloating">@color/windowbackground</item> <!-- background color on subject interest -->
        <item name="android:colorBackground">@color/windowbackground</item> <!-- background color on spinner -->

        <item name="colorButtonNormal">@color/primary_darker1</item>
        <item name="android:colorButtonNormal">@color/primary_darker1</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/primary_darker1</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/primary_dark1</item>
    </style>

    <style name="AppTheme.Dark.Dialog1" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/primary_darker1</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/primary_dark1</item>
    </style>

    <style name="FullScreenVideoTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>



</resources>
