<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.gnosis.app.SettingsActivity">

    <EditText
        android:id="@+id/name"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="54dp"
        android:layout_marginTop="144dp"
        android:background="@drawable/rounded_edittext"
        android:paddingLeft="5dp"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/phone2"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name"
        android:layout_alignParentTop="true"
        android:layout_marginTop="185dp"
        android:background="@drawable/rounded_edittext"
        android:inputType="phone"
        android:paddingLeft="5dp"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="226dp"
        android:text="School"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignTop="@+id/phone2"
        android:text="Phone"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/name"
        android:layout_marginStart="18dp"
        android:text="Name"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignTop="@+id/course"
        android:text="Course"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/about"
        android:layout_width="236dp"
        android:layout_height="93dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/school"
        android:layout_marginBottom="105dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:paddingLeft="5dp"
        android:inputType="textMultiLine"/>

    <Spinner
        android:id="@+id/school"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/name"
        android:layout_alignTop="@+id/textView4"
        android:entries="@array/schools_list" />

    <Spinner
        android:id="@+id/course"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/name"
        android:layout_marginBottom="220dp"
        android:entries="@array/course_list" />


    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:src="@mipmap/default_pic"
        android:background="@drawable/rounded_edittext"/>

    <Button
        android:id="@+id/confirm"
        android:layout_width="98dp"
        android:layout_height="29dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/name"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rounded_edittext"
        android:text="Save" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/name"
        android:layout_alignTop="@+id/confirm"
        android:background="@drawable/rounded_edittext"
        android:text="back" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginBottom="70dp"
        android:text="Interest"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignTop="@+id/about"
        android:text="About"
        android:textStyle="bold" />

    <Button
        android:id="@+id/select_interest"
        android:layout_width="235dp"
        android:layout_height="33dp"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignStart="@+id/name"
        android:layout_marginBottom="-10dp"
        android:text="Select your subject interests"
        android:textSize="8dp" />

</RelativeLayout>
