<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.gnosis.app.SettingsActivity">

    <EditText
        android:id="@+id/name"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="54dp"
        android:layout_marginTop="144dp"
        android:background="@drawable/rounded_edittext"
        android:textColor="@color/black"
        android:paddingLeft="5dp"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/phone2"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name"
        android:layout_alignParentTop="true"
        android:layout_marginTop="185dp"
        android:background="@drawable/rounded_edittext"
        android:textColor="@color/black"
        android:inputType="phone"
        android:paddingLeft="5dp"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="226dp"
        android:text="School"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignTop="@+id/phone2"
        android:text="Phone"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/name"
        android:layout_marginStart="18dp"
        android:text="Name"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignTop="@+id/course"
        android:text="Course"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/about"
        android:layout_width="236dp"
        android:layout_height="93dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/name"
        android:layout_marginBottom="151dp"
        android:background="@drawable/rounded_edittext"
        android:textColor="@color/black"
        android:ems="10"
        android:inputType="textMultiLine"
        android:paddingLeft="5dp" />

    <Spinner
        android:id="@+id/school"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/name"
        android:layout_alignTop="@+id/textView4"
        android:entries="@array/schools_list"
        />

    <Spinner
        android:id="@+id/course"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/name"
        android:layout_marginBottom="270dp"
        android:entries="@array/course_list" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:src="@mipmap/default_pic" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="98dp"
        android:layout_height="37dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/name"
        android:layout_marginBottom="12dp"
        android:text="Save" />

    <Button
        android:id="@+id/back"
        android:layout_width="98dp"
        android:layout_height="37dp"
        android:layout_alignBottom="@+id/confirm"
        android:layout_alignEnd="@+id/name"
        android:text="back" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/select_interest"
        android:layout_toStartOf="@+id/name"
        android:text="Interest"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignTop="@+id/about"
        android:text="About"
        android:textStyle="bold" />

    <Button
        android:id="@+id/select_interest"
        android:layout_width="207dp"
        android:layout_height="33dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="97dp"
        android:layout_marginEnd="66dp"
        android:text="Select your subject interests"
        android:textSize="10dp" />

</RelativeLayout>

